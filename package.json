{
  "name": "aws-nodejs-serverless",
  "version": "1.0.0",
  "description": "AWS sample for the Serverless framework",
  "main": "app/index.ts",
  "scripts": {
    "debug:serve": "node --inspect ./node_modules/.bin/sls offline start",
    "debug:test": "node --inspect-brk ./node_modules/.bin/jest --runInBand --watch",
    "serve": "./node_modules/.bin/sls offline start",
    "clean:db": "./node_modules/.bin/sls dynamodb remove && sls dynamodb install",
    "lerna": "lerna"
  },
  "private": true,
  "workspaces": [
    "services/*"
  ],
  "keywords": [
    "azure",
    "serverless"
  ],
  "devDependencies": {
    "@types/aws-lambda": "^0.0.22",
    "@types/boom": "^4.3.9",
    "@types/hapi": "^16.1.11",
    "@types/jest": "^21.1.8",
    "@types/joi": "^10.6.0",
    "@types/node": "^8.0.54",
    "@types/uuid": "^3.4.3",
    "aws-lambda": "^0.1.2",
    "aws-sdk": "^2.162.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "jest": "^21.2.1",
    "lerna": "^2.8.0",
    "serverless": "^1.24.1",
    "serverless-dynamodb-client": "^0.0.2",
    "serverless-dynamodb-local": "^0.2.26",
    "serverless-offline": "^3.16.0",
    "serverless-plugin-typescript": "^1.1.3",
    "serverless-webpack": "^4.1.0",
    "source-map-support": "^0.5.0",
    "ts-jest": "^21.2.4",
    "ts-loader": "^3.2.0",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2",
    "webpack": "^3.9.1",
    "webpack-node-externals": "^1.6.0"
  },
  "dependencies": {
    "boom": "^5.2.0",
    "hapi": "^16.6.2",
    "joi": "^12.0.0",
    "uuid": "^3.1.0"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "collectCoverage": true,
    "mapCoverage": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}